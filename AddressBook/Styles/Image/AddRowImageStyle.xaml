<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="AnimatedScaleOnMouseOverImageStyle.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="AddRowImageStyle"
           BasedOn="{StaticResource AnimatedScaleOnMouseOverImageStyle}"
           TargetType="{x:Type Image}">

        <Setter Property="Width" Value="40"/>
        <Setter Property="Image.Source" Value="/Assets/Images/HomeViewButtons/AddButton.png" />
        <Setter Property="ToolTip">
            <Setter.Value>
                <ToolTip Content="Добавить запись" 
                         Background="AliceBlue"/>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>